@model CalorieTracker.Models.MetricLog

@{
    ViewBag.Title = "Log Metric";
}
<div id="blue">
    <div class="centered">
        <h2>Log Metric</h2>
        <p>Log Your Latest Metric</p>
    </div>
</div>

<div class="container">
    <div class="row centered">
        <div class="loginPanel">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.MetricID, "Metric", new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.DropDownList("MetricID")
                            @Html.ValidationMessageFor(model => model.MetricID)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Value, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Value)
                            @Html.ValidationMessageFor(model => model.Value)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}