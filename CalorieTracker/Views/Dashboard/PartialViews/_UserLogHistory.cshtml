@model CalorieTracker.Models.User

<div class="dashboardHistoryPanel">
    <h3 class="section-title">Recent History</h3>
    <div class="dashboardUserInfo">
        @if (@Model.UserFoodLogs.Count == 0)
        {
            <div class="redButton">
                @Html.ActionLink("Please Your First Log", "Index", "Log")
            </div>
        }
        else
        {
            for (int i = 0; i < @Model.UserFoodLogs.Count; i++)
            {
                <ul>
                    <li>
                        <b>Date: @Model.UserFoodLogs.ElementAt(i).CreationTimestamp.ToString("dd:MM:yyyy hh:mm")</b>
                    </li>
                    <li>
                        Name: @Model.UserFoodLogs.ElementAt(i).Food.Name
                    </li>
                    <li>
                        Amount: @Model.UserFoodLogs.ElementAt(i).Quantity
                    </li>
                </ul>
                if (i == 3)
                {
                    break;
                }
            }
        }
    </div>
</div>