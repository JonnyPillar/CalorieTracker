@model CalorieTracker.ViewModels.LogUserInformationModel
@using (Html.BeginForm("Metric", "Log"))
{
    <h2>Log Metric</h2>
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>tbl_food_log</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.MetricList)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.SelectedMetric, new SelectList(Model.MetricList, "user_metric_id", "user_metric_name"))
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Value)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Value)
            @Html.ValidationMessageFor(m => m.Value)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
