@model CalorieTracker.ViewModels.LogFoodModel
<h2>Log Food</h2>
@Html.ActionLink("Add New Food", "Create", "Food")
@using (Html.BeginForm("Food", "Log"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>tbl_food_log</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.FoodList)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.SelectedFood, new SelectList(Model.FoodList, "food_id", "food_name"))
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Quantity)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Quantity)
            @Html.ValidationMessageFor(m => m.Quantity)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
