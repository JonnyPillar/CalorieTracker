@model CalorieTracker.Models.Accounts.UserContext.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
     @Html.ValidationSummary(true, "Register failed. Check your details.");
     <div>
        <fieldset>
            <legend>Register</legend>
            <div class="editor-label">
                @Html.LabelFor(u => u.user_email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.user_email)
                @Html.ValidationMessageFor(u => u.user_email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.user_first_name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.user_first_name)
                @Html.ValidationMessageFor(u => u.user_first_name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.user_second_name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.user_second_name)
                @Html.ValidationMessageFor(u => u.user_second_name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.user_dob)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.user_dob, new { value = DateTime.Now.ToString("ddMMyyyy") })
                @Html.ValidationMessageFor(u => u.user_dob)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password  )
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.ConfirmPassword)
                @Html.ValidationMessageFor(u => u.ConfirmPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.user_profile_image)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.user_profile_image)
                @Html.ValidationMessageFor(u => u.user_profile_image)
            </div>
            
            <input type="submit" value="Register" />
        </fieldset>
    </div>
}
