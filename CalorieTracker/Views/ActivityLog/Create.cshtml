@model CalorieTracker.Models.ActivityLog

@{
    ViewBag.Title = "Log Activity";
}

<div id="blue">
    <div class="centered">
        <h2>Log Activity</h2>
        <p>Log A New Activity You Have Completed</p>
    </div>
</div>

<div class="container">
    <div class="row centered">
        <div class="loginPanel">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ActivityID, "Activity", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("ActivityID")
                            @Html.ValidationMessageFor(model => model.ActivityID)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StartDate)
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Duration, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Duration)
                            @Html.ValidationMessageFor(model => model.Duration)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Distance, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Distance)
                            @Html.ValidationMessageFor(model => model.Distance)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Accent, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Accent)
                            @Html.ValidationMessageFor(model => model.Accent)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HeartRate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HeartRate)
                            @Html.ValidationMessageFor(model => model.HeartRate)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Notes, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Notes)
                            @Html.ValidationMessageFor(model => model.Notes)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FileURL, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FileURL)
                            @Html.ValidationMessageFor(model => model.FileURL)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
